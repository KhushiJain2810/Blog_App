 <%- include('../partials/header') %>

<div class="container my-4">
	<div class = "row">
		<div class="col-m-3 col-lg-3"></div>
		<div class="col-m-6 col-lg-6">
			 <div class="my-3">
				<h3 class="my-auto">Create New Blog</h3>				
			 </div>
				<form action="/blogs" method="POST">
				  <div class="form-group my-4">
					<input type="text" placeholder = "title" class="form-control" name = "blog_title">
				  </div>
					<div class="form-group my-4">
						<input type='text' placeholder = "image link" class="form-control" name = "blog_image">
					</div>
				  <div class="form-group my-4">
						<textarea class="form-control" rows="8" name="blog_body" placeholder="Write your blog"></textarea>
				  </div>
				  <button type="submit" class="btn btn-primary btn-block">Submit</button>
				</form>
		</div>
		<div class="col-m-3 col-lg-3"></div>
	</div>	
</div>

<%- include('../partials/footer') %>
