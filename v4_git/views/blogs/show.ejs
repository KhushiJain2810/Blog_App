<%- include('../partials/header') %>


<div class="container my-4">
	<div class="row">
		<div class="col-lg-3"></div>
			<div class="col-lg-6 col-md-9 col-sm-12 col-xs-12 my-2">
				<!-- <div class="card">
				  <div class="card-body">
					<h5 class="card-title"><- blog.title %></h5>
					  <img src="<= blog.image %>">
					<p class="card-text"><- blog.body %></p>
					<h6 class="card-subtitle mb-2 text-muted">By <= blog.author.username %></h6> -->
<!-- 					   -->
					<div class="thumbnail">
						<img src="<%= blog.image %>" class="img-fluid img-thumbnail" style="height=100">
						<div class="caption-full caption m-3" >
							<h4><a href="#"><%=  blog.title %></a></h4>
							<p>
								<%= blog.body %>						
							</p>
							<p>
								<em>Submitted by <%= blog.author.username %></em>
							</p>

<!-- 					 -->
							  <% if(currentUser && blog.author.id.equals(currentUser._id)){ %>
							  <a href="/blogs/<%= blog._id %>/edit" class="btn btn-link">Edit</a>
							  <form method="POST" action="/blogs/<%= blog._id %>?_method=DELETE" class="delete-form">
								  <button class="btn btn-link">Delete</button>
							  </form>					  
							  <% } %>
						</div>
					</div>
				
				<ul class="list-group my-4">
					<p>
						<a href = "/blogs/<%= blog._id %>/comments/new">Add Comment</a>
					</p>
					<% blog.comments.forEach((comment)=>{  %>
					
					 <li class="list-group-item">
						<p>
							<em><%= comment.author.username %></em>
						</p>
						<%- comment.text %>
						<% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
					    <a href="/blogs/<%= blog._id %>/comments/<%= comment._id %>/edit" class="btn btn-link">Edit</a>
						<form method="POST" action="/blogs/<%= blog._id %>/comments/<%= comment._id %>?_method=DELETE" class="delete-form">
						  <button class="btn btn-link">Delete</button>
						</form>
						 <% } %>
					</li>
					<% }) %>
				</ul>
			</div>
		<div class="col-lg-3"></div>
	</div>
</div>

<%- include('../partials/footer') %>
