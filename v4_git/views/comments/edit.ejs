 <%- include('../partials/header') %>

<div class="container my-4">
	<div class = "row">
		<div class="col-m-3 col-lg-3"></div>
		<div class="col-m-6 col-lg-6">
			 <div class="my-3">
				<h3 class="my-auto">Edit Comment</h3>				
			 </div>
				<form method="POST" action="/blogs/<%= blog_id %>/comments/<%= comment._id %>?_method=PUT">
				  <div class="form-group my-4">
					<input type="text" value = "<%= comment.text %>" class="form-control" name = "comment[text]">
				  </div>
				  <button type="submit" class="btn btn-primary btn-block">Submit</button>
				</form>
		</div>
		<div class="col-m-3 col-lg-3"></div>
	</div>	
</div>

