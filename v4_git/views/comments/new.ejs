 <%- include('../partials/header') %>

<div class="container my-4">
	<div class = "row">
		<div class="col-m-3 col-lg-3"></div>
		<div class="col-m-6 col-lg-6">
			 <div class="my-3">
				<h3 class="my-auto">Add Comment to <%= blog.title %></h3>				
			 </div>
				<form action="/blogs/<%= blog._id %>/comments" method="POST">
				  <div class="form-group my-4">
					<input type="text" placeholder = "text" class="form-control" name = "comment_text">
				  </div>
				  <button type="submit" class="btn btn-primary btn-block">Submit</button>
				</form>
		</div>
		<div class="col-m-3 col-lg-3"></div>
	</div>	
</div>

<%- include('../partials/footer') %>
